@model MyPortfolioDotNet.Models.Project

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Technology" class="control-label"></label>
                <input asp-for="Technology" class="form-control" />
                <span asp-validation-for="Technology" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link" class="control-label"></label>
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UploadFiles" class="control-label"></label>
                <input type="file" multiple asp-for="UploadFiles" class="form-control" />
                <span asp-validation-for="UploadFiles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UploadFiles" class="control-label"></label>
                <input type="file" multiple asp-for="UploadFiles" class="form-control" />
                <span asp-validation-for="UploadFiles" class="text-danger"></span>
            </div>

            @if (Model.Images != null && Model.Images.Any())
            {
                <h4>Current Images</h4>
                <div class="row">
                    @foreach (var image in Model.Images)
                    {
                        <div class="col-md-3">
                            <img src="@image.ImageUrl" alt="Project Image" class="img-thumbnail" />
                            <input type="file" name="UpdatedImages" />
                        </div>
                    }
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
